set $mod Mod1
set $win Mod4

default_border pixel 1

font pango:FiraCode Nerd Font SemiBold 11

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +2% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -2% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

floating_modifier $mod

bindsym $mod+n exec --no-startup-id "playerctl --player=sayonara,spotify next && $refresh_i3status"
bindsym $mod+r exec --no-startup-id "playerctl --player=sayonara,spotify previous && $refresh_i3status"
bindsym $mod+s exec --no-startup-id "playerctl --player=sayonara,spotify play-pause && $refresh_i3status"

bindsym $mod+Return exec --no-startup-id alacritty
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id rofi -show run

bindsym $mod+j focus next
bindsym $mod+k focus prev

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+p split v
bindsym $mod+h split h
bindsym $mod+l layout toggle split
bindsym $mod+m focus parent
bindsym $mod+w layout tabbed
bindsym $mod+f fullscreen toggle


bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

bindsym $mod+Shift+b move scratchpad
bindsym $mod+b scratchpad show

# -- workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6

bindsym $win+n workspace number $ws1
bindsym $win+r workspace number $ws2
bindsym $win+s workspace number $ws3
bindsym $win+g workspace number $ws4
bindsym $win+q workspace number $ws5
bindsym $win+z workspace number $ws6

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6

bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec i3-msg exit
bindsym $mod+Shift+f exec --no-startup-id flameshot gui
 
# -- applications
bindsym ctrl+shift+f exec --no-startup-id google-chrome-stable

# -- assigns
assign [class = "discord"] 4
assign [class = "spotify"] 5

# include *.i3conf
